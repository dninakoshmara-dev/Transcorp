{
  "name": "transport-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start:dev": "nest start --watch",
    "build": "npx nest build",
    "start": "node dist/main.js",
    "test:e2e": "jest -c test/jest-e2e.json",
    "test:e2e:testdb": "sh -lc \"export DATABASE_URL='postgresql://postgres:postgres@db_test:5432/transport_test?schema=public' && npx prisma migrate reset --force && npm run test:e2e\"",
    "test:cov": "jest --config /app/jest.config.cjs --coverage",
    "test:watch": "jest --watch",
    "test": "jest --config /app/jest.config.cjs"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@prisma/client": "^6.19.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/platform-express": "^10.4.22",
    "@nestjs/testing": "^10.4.22",
    "@swc/core": "^1.15.11",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "prisma": "^6.19.2",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
